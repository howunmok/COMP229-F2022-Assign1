<%- include ../partials/header.ejs %>

<%- include ../partials/content.ejs %>

<main>
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-12">
            <h2><%= title %></h2>
            <br>
            <a href="/business-contact/add" class="btn btn-info" role="button">
              <i class="fas fa-plus-circle" style="color: white"></i><span style="color: white"> Add Contact</span></a>
              <br><br>
            <table class="table table-bordered table-striped table-hover">
                <!--Header Row-->
                <tr>
                    <th class="text-center">Contact Name</th>
                    <th class="text-center">Contact Number</th>
                    <th class="text-center">Email Adress</th>
                    <th class="text-center col-1"></th>
                    <th class="text-center col-1"></th>
                </tr>

                <!--Repeatable Template Row-->

                <% for(let count = 0; count < BusContact.length; count++) { %>
                    <tr>
                        <td class="text-center"><%= BusContact[count].contactname %></td>
                        <td class="text-center"><%= BusContact[count].contactno %></td>
                        <td class="text-center"><%= BusContact[count].email %></td>
                        <td class="text-center col-1">
                          <a href="/business-contact/update/<%= BusContact[count]._id %>" class="btn btn-outline-info btn-sm">
                          <i class="fas fa-pencil-alt"></i> Update</a>
                          </td>
                          <td class="text-center col-1">
                          <a href="/business-contact/delete/<%= BusContact[count]._id %>" class="btn btn-outline-danger btn-sm">
                          <i class="fas fa-trash-alt"></i> Delete</a></a>
                    </tr>
                <% } %>
            </table>
        </div>
      </div>
    </div>
  </main>

<%- include ../partials/right_contact.ejs %>
  
